#!/bin/bash
set -euo pipefail

# create-links - Establish ConfigHub link relationships for TraderX dependencies
# This is the CANONICAL pattern for expressing service dependencies in ConfigHub
# See: docs/LINKS-DEPENDENCIES.md

echo "ğŸ”— Creating ConfigHub links for TraderX service dependencies..."

# Get project name
if [ ! -f .cub-project ]; then
  echo "âŒ Error: .cub-project file not found"
  echo "   Run bin/install-base first to create the project"
  exit 1
fi

PROJECT=$(cat .cub-project)

# Determine which environment to create links for
ENV="${1:-dev}"
SPACE="${PROJECT}-${ENV}"

echo "ğŸ“¦ Project: $PROJECT"
echo "ğŸŒ Environment: $ENV"
echo "ğŸ“ Space: $SPACE"

# Verify space exists
if ! cub space get "$SPACE" >/dev/null 2>&1; then
  echo "âŒ Error: Space $SPACE does not exist"
  echo "   Run bin/install-envs first to create the environment"
  exit 1
fi

echo ""
echo "Creating dependency links (based on chanwit/traderx canonical pattern)..."
echo ""

# Pattern from chanwit/traderx: https://github.com/chanwit/traderx/blob/main/k8s-manifests/deploy-via-confighub.sh
# Total: 20 links covering all service dependencies

# 1. ALL SERVICES â†’ NAMESPACE (10 links)
echo "ğŸ“¦ All Services â†’ Namespace"
ALL_SERVICES=(
  "database"
  "people-service"
  "reference-data"
  "trade-feed"
  "account-service"
  "position-service"
  "trade-processor"
  "trade-service"
  "web-gui"
)

for service in "${ALL_SERVICES[@]}"; do
  link_slug="${service}-to-ns"

  echo "  Creating link: ${service}-deployment â†’ namespace"

  cub link create "$link_slug" \
    "${service}-deployment" \
    "namespace" \
    --space "$SPACE" \
    --label relationship=dependency \
    --label type=namespace \
    --label purpose="requires-namespace" \
    --allow-exists \
    --json >/dev/null 2>&1 || {
      echo "    âš ï¸  Link may already exist or units not found (continuing...)"
    }
done

# 2. DATABASE DEPENDENCIES (2 links)
echo ""
echo "ğŸ“Š Services â†’ Database"

echo "  Creating link: account-service-deployment â†’ database-deployment"
cub link create "account-to-db" \
  "account-service-deployment" \
  "database-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=database \
  --label purpose="jdbc-connection" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: position-service-deployment â†’ database-deployment"
cub link create "position-to-db" \
  "position-service-deployment" \
  "database-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=database \
  --label purpose="jdbc-connection" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

# 3. TRADE-PROCESSOR DEPENDENCIES (2 links)
echo ""
echo "ğŸ”„ Trade Processor Dependencies"

echo "  Creating link: trade-processor-deployment â†’ database-deployment"
cub link create "tradeproc-to-db" \
  "trade-processor-deployment" \
  "database-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=database \
  --label purpose="data-access" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: trade-processor-deployment â†’ trade-feed-deployment"
cub link create "tradeproc-to-feed" \
  "trade-processor-deployment" \
  "trade-feed-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=service \
  --label purpose="api-client" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

# 4. TRADE-SERVICE DEPENDENCIES (5 links)
echo ""
echo "ğŸ’¼ Trade Service Dependencies"

echo "  Creating link: trade-service-deployment â†’ database-deployment"
cub link create "tradesvc-to-db" \
  "trade-service-deployment" \
  "database-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=database \
  --label purpose="data-storage" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: trade-service-deployment â†’ people-service-deployment"
cub link create "tradesvc-to-people" \
  "trade-service-deployment" \
  "people-service-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=service \
  --label purpose="user-lookup" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: trade-service-deployment â†’ reference-data-deployment"
cub link create "tradesvc-to-refdata" \
  "trade-service-deployment" \
  "reference-data-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=service \
  --label purpose="security-data" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: trade-service-deployment â†’ trade-feed-deployment"
cub link create "tradesvc-to-feed" \
  "trade-service-deployment" \
  "trade-feed-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=service \
  --label purpose="trade-publishing" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo "  Creating link: trade-service-deployment â†’ account-service-deployment"
cub link create "tradesvc-to-account" \
  "trade-service-deployment" \
  "account-service-deployment" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=service \
  --label purpose="account-validation" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

# 5. INGRESS DEPENDENCIES (1 link)
echo ""
echo "ğŸŒ Ingress Dependencies"

echo "  Creating link: ingress â†’ namespace"
cub link create "ingress-to-ns" \
  "ingress" \
  "namespace" \
  --space "$SPACE" \
  --label relationship=dependency \
  --label type=namespace \
  --label purpose="requires-namespace" \
  --allow-exists \
  --json >/dev/null 2>&1 || echo "    âš ï¸  Link may already exist"

echo ""
echo "âœ… Link creation complete! (20 links total)"
echo ""
echo "ğŸ“Š Link Summary:"
echo "   - 9 services â†’ namespace"
echo "   - 1 ingress â†’ namespace"
echo "   - 2 database clients (account, position)"
echo "   - 2 trade-processor dependencies"
echo "   - 5 trade-service dependencies"
echo "   - 1 ingress â†’ namespace"
echo ""
echo "ğŸ“‹ Verify links created:"
echo "   cub link list --space $SPACE"
echo ""
echo "ğŸ” View dependency graph:"
echo "   cub link list --space $SPACE --format json | jq -r '.[] | \"\\(.FromUnitSlug) â†’ \\(.ToUnitSlug)\"'"
echo ""
echo "ğŸ¯ Key Benefits (from chanwit/traderx canonical pattern):"
echo "   - ConfigHub knows the full dependency graph"
echo "   - Placeholders auto-filled from linked units"
echo "   - Apply operations respect dependencies automatically"
echo "   - Validation before apply (catches missing deps)"
echo "   - No manual sleep/wait commands needed"
echo ""
