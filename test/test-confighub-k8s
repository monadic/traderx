#!/bin/bash
# TraderX wrapper for ConfigHub + Kubernetes Mini TCK
# The actual test lives in devops-sdk repository

SDK_PATH="/Users/alexis/Public/github-repos/devops-sdk"
TCK_SCRIPT="$SDK_PATH/test-confighub-k8s"

if [ -f "$TCK_SCRIPT" ]; then
  exec "$TCK_SCRIPT"
else
  echo "‚ùå Error: Mini TCK not found at $TCK_SCRIPT"
  echo ""
  echo "To install:"
  echo "  git clone https://github.com/monadic/devops-sdk $SDK_PATH"
  echo ""
  echo "Or run the TCK directly:"
  echo "  curl -fsSL https://raw.githubusercontent.com/monadic/devops-sdk/main/test-confighub-k8s | bash"
  exit 1
fi
